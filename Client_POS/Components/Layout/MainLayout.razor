@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize] 

<RadzenComponents />

<RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body';">
    <RadzenHeader>
        <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="0">
            <RadzenColumn Size="5">
                <RadzenSidebarToggle Click="@SidebarToggleClick"></RadzenSidebarToggle>
            </RadzenColumn>
            <RadzenColumn Size="7">
                <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End">
                     <RadzenProfileMenu>
                        <Template>
                                <RadzenGravatar Email="user@example.com"> </RadzenGravatar>
                                <RadzenLabel Text="Nombre de Usuario"></RadzenLabel>
                        </Template>
                        <ChildContent>
                            <RadzenProfileMenuItem Text="Perfil" Path="" Icon="settings"></RadzenProfileMenuItem>
                            <RadzenProfileMenuItem Text="Salir" Path="/logout" Icon="power_settings_new"></RadzenProfileMenuItem>                        
                        </ChildContent>
                    </RadzenProfileMenu>
                </RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenBody Expanded="@sidebarExpanded">
        <RadzenRow class="rz-mx-auto rz-px-4 rz-pt-2 rz-pt-md-4 rz-pt-lg-6 rz-pt-xl-12 rz-pb-2 rz-pb-lg-12" Style="max-width: 1440px;">
            <RadzenColumn Size="12">
            @Body
            </RadzenColumn>
        </RadzenRow>
    </RadzenBody>
    <RadzenSidebar Expanded="@sidebarExpanded" style="z-index: 2">
        <RadzenStack AlignItems="Radzen.AlignItems.Center" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border);">
            <RadzenImage Path="images/logo-login.png"  style="width: 48px; height: 48px;" AlternateText="logo"></RadzenImage>
            <RadzenText Text="ShellyPOS" TextStyle="Radzen.Blazor.TextStyle.Subtitle1" class="rz-mb-0" style="color: var(--rz-sidebar-color);" />
        </RadzenStack>
        
        <RadzenPanelMenu>
           
            <RadzenPanelMenuItem Icon="home" Text="Inicio" Path="" />
            <RadzenPanelMenuItem Icon="add_shopping_cart" Text="Ventas" Path="/sales" />
            <RadzenPanelMenuItem Icon="assignment_ind" Text="Clientes" Path="/clients" />
            <RadzenPanelMenuItem Icon="shopping_cart" Text="Proveedores" Path="/clients" />
            <RadzenPanelMenuItem Icon="card_giftcard" Text=" Productos" Path="/products" />
            <RadzenPanelMenuItem Icon="chrome_reader_mode" Text="Inventario" Path="" />
            <RadzenPanelMenuItem Icon="dashboard" Text="Reportes" Path="/reports" />
            <RadzenPanelMenuItem Icon="accessible" Text="Consultorio">
                <RadzenPanelMenuItem Icon="accessibility" Text="Pacientes"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Icon="assignment_turned_in" Text="Servicios"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Icon="event" Text="Reservaciones"></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Icon="settings" Text="Configuración" >
                <RadzenPanelMenuItem Text="Company" Path="/company" Icon="account_circle"></RadzenPanelMenuItem>
                <RadzenPanelMenuItem Text="Promotions" Path="" Icon="card_giftcard"></RadzenPanelMenuItem>
            </RadzenPanelMenuItem>            
        </RadzenPanelMenu>
        <RadzenStack AlignItems="Radzen.AlignItems.Center" Gap="0" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding);">
            <RadzenText Text="ShellyPOS v1.0.0" TextStyle="Radzen.Blazor.TextStyle.Caption" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
            <RadzenText Text="Copyright Ⓒ 2024" TextStyle="Radzen.Blazor.TextStyle.Caption" class="rz-mb-0" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
        </RadzenStack>
    </RadzenSidebar>
</RadzenLayout>
