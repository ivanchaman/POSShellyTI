@page "/login"
@layout LoginLayout
@using Microsoft.AspNetCore.Components.Authorization
@using Shelly.GraphQLCoreClient.Interfaces
@using ShellyPOS.Interfaces
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager Navigation
@inject NotificationService NotificationService
@inject ILoginServices LoginServices

<PageTitle>Iniciar Sesión</PageTitle>
<RadzenContent Container="main">
    <ChildContent>      
        <RadzenTemplateForm Data=@("LoginWithRemember")>
            <ChildContent>
                <RadzenLogin AllowRegister="true" 
                    AllowResetPassword="true" 
                    Username="" 
                    Password=""                        
                    AllowRememberMe="true" 
                    RememberMe="true"
                    UserText="Usuario" 
                    PasswordText="Contraseña"
                    UserRequired="Requerido"
                    PasswordRequired="Requerido"
                    RegisterText="Registrar"
                    RegisterMessageText="¿Todavia no tienes una cuenta?"
                    ResetPasswordText="Reestablecer contraseña"
                    RememberMeText="Recuerdame"
                    Login=@(args => OnLogin(args))
                    ResetPassword=@(args => OnResetPassword(args))
                    Register=@(args => OnRegister()) />
            </ChildContent>
        </RadzenTemplateForm>
    </ChildContent>
</RadzenContent>


